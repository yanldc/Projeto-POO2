<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.poo2.javafx.DashboardCompletoController">
   <children>
      <Label text="Dashboard Completo - Análise Populacional" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
      <HBox>
         <children>
            <VBox>
               <children>
                  <Label text="População por Estado" />
                  <ProgressIndicator fx:id="progressBar" visible="false" />
                  <BarChart fx:id="barChart" prefWidth="400">
                    <xAxis><CategoryAxis /></xAxis>
                    <yAxis><NumberAxis /></yAxis>
                  </BarChart>
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label text="Distribuição por Região" />
                  <ProgressIndicator fx:id="progressPie" visible="false" />
                  <PieChart fx:id="pieChart" prefWidth="400" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>